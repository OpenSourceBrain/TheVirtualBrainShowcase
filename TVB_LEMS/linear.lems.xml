<?xml version="1.0" ?>
<Lems xmlns="http://www.neuroml.org/lems/0.7.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.neuroml.org/lems/0.7.3 https://raw.githubusercontent.com/LEMS/LEMS/development/Schemas/LEMS/LEMS_v0.7.3.xsd">
  <Dimension name="time" t="1"/>
  <ComponentType extends="baseCellMembPot" name="linear">
    <Parameter dimension="none" name="lam"/>
    <Constant dimension="none" name="PI" value="3.14159265359"/>
    <Constant dimension="time" name="MSEC" value="1ms"/>
    <Attachments name="synapses" type="basePointCurrentDL"/>
    <Exposure dimension="none" name="x"/>
    <Exposure dimension="none" name="c"/>
    <Dynamics>
      <StateVariable dimension="none" exposure="x" name="x"/>
      <StateVariable dimension="voltage" exposure="v" name="v"/>
      <DerivedVariable exposure="x" name="x" value="x"/>
      <DerivedVariable dimension="none" exposure="c" name="c" reduce="add" select="synapses[*]/I"/>
      <TimeDerivative value="(lam * x + c)/MSEC" variable="x"/>
      <OnCondition test="v .gt. 0">
        <EventOut port="spike"/>
      </OnCondition>
    </Dynamics>
  </ComponentType>
</Lems>
